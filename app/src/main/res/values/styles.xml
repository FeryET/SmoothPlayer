<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="musicItemViewHolderTextStyle">
        <item name="android:fontFamily">
            sans-serif-condensed-medium
        </item>
        <item name="android:color">
            @color/appBlack
        </item>
        <item name="android:gravity">
            center
        </item>
    </style>

    <style name="player_bar_image_button">
        <item name="android:layout_width">
            @dimen/player_bar_buttons_dimensions
        </item>
        <item name="android:layout_height">
            @dimen/player_bar_buttons_dimensions
        </item>
        <item name="android:layout_margin">
            @dimen/player_bar_buttons_margins
        </item>
        <item name="android:layout_gravity">
            center
        </item>
        <item name="android:background">
            @null
        </item>
    </style>

    <dimen name="player_bar_buttons_margins">4dp</dimen>
</resources>
