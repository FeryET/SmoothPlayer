<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0EDE0"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/player_bar_album_artwork"
            android:layout_width="@dimen/player_bar_album_artwork_dimensions"
            android:layout_height="@dimen/player_bar_album_artwork_dimensions"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:contentDescription="@string/desc_album_artwork" />

    <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/player_bar_previous_track"
            style="@style/player_bar_image_button"
            android:src="@drawable/ic_skip_previous"/>

    <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/player_bar_play_pause_current_song"
            style="@style/player_bar_image_button"
            android:src="@drawable/ic_play_arrow"/>

    <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/player_bar_next_track"
            style="@style/player_bar_image_button"
            android:src="@drawable/ic_skip_next"/>

    <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/player_bar_stop"
            style="@style/player_bar_image_button"
            android:src="@drawable/ic_stop"/>

    <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
</LinearLayout>