<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordered_music_item_background">

    <ImageView
            android:id="@+id/view_holder_album_image_view"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/view_holder_song_name_text_view"
            style="@style/musicItemViewHolderTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_holder_album_image_view"
            app:layout_constraintTop_toTopOf="@+id/view_holder_album_image_view"
            tools:text="SONG_TITLE" />

    <TextView
            android:id="@+id/view_holder_artist_name_text_view"
            style="@style/musicItemViewHolderTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/view_holder_album_image_view"
            app:layout_constraintStart_toEndOf="@+id/view_holder_album_image_view"
            app:layout_constraintTop_toBottomOf="@+id/view_holder_song_name_text_view"
            tools:text="THIS_IS" />

    <TextView
            android:id="@+id/view_holder_album_name_text_view"
            style="@style/musicItemViewHolderTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:maxWidth="100dp"
            android:textSize="13sp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/view_holder_artist_name_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_holder_artist_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/view_holder_song_name_text_view"
            tools:text="" />
</androidx.constraintlayout.widget.ConstraintLayout>